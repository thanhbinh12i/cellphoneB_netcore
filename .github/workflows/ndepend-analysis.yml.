name: NDepend Analysis (Trial)

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  analyze:
    runs-on: windows-latest
    steps:
    - uses: actions/checkout@v2

    - name: Setup .NET
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: '6.0.x'  # Cập nhật phiên bản .NET nếu cần

    - name: Restore dependencies
      run: dotnet restore CellPhoneB_Store.sln

    - name: Build
      run: dotnet build CellPhoneB_Store.sln --configuration Release --no-restore

    - name: Download and Install NDepend
      run: |
        Invoke-WebRequest -Uri "https://www.ndepend.com/download/NDepend_2024.2.0.9740_Trial.zip" -OutFile "ndepend.zip"
        Expand-Archive -Path "ndepend.zip" -DestinationPath "ndepend"
        # Chạy installer nếu cần
        # Start-Process -FilePath "ndepend\NDependInstaller.exe" -ArgumentList "/VERYSILENT" -Wait

    - name: Run NDepend Analysis
      run: |
        .\ndepend\NDepend.Console.exe "CellPhoneB_Store\CellPhoneB_Store.csproj" /OutDir "NDependOut"

    - name: Upload NDepend Results
      uses: actions/upload-artifact@v2
      with:
        name: ndepend-results
        path: NDependOut
