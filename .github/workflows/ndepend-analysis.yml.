name: NDepend Analysis (Trial)

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  analyze:
    runs-on: windows-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Setup .NET
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: '8.0.403'  # Update .NET version if needed

    - name: Restore dependencies
      run: dotnet restore CellPhoneB_Store.sln

    - name: Build
      run: dotnet build CellPhoneB_Store.sln --configuration Release --no-restore

    - name: Download and Extract NDepend
      run: |
        curl -L -o ndepend.zip "https://www.ndepend.com/download/NDepend_2024.2.0.9740_Trial.zip"
        tar -xf ndepend.zip -C ./ndepend

    - name: Run NDepend Analysis
      run: |
        .\ndepend\NDepend.Console.exe "CellPhoneB_Store\CellPhoneB_Store.csproj" /OutDir "NDependOut"
      shell: pwsh

    - name: Upload NDepend Results
      uses: actions/upload-artifact@v2
      with:
        name: ndepend-results
        path: NDependOut
